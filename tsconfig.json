{
    "compilerOptions": {
        "target": "ES2015",
        "module": "es2015",
        "lib": [
            "es2017",
            "dom",
            "dom.iterable"
        ],
        "outDir": "build",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "noFallthroughCasesInSwitch": true,
        "jsx": "react",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
    },
    "include": [
        "src"
    ],
    "exclude": []
}